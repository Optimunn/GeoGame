import { VerticalBox, GridBox } from "std-widgets.slint";
import { ImageRS, StaticImage} from "images.slint";
import { MyButton } from "mybutton.slint";

struct ButtonData {
    text: string,
    color: color
}

export component PrimeWindow inherits Rectangle {
    callback settings-window;
    callback button-clicked(int);
    in property <[ButtonData]> button-data;
    in property <image> icon;

    StaticImage {
        icon: @image-url("../assets/icons/settings.svg");
        x: 0px;
        y: 0px;
        clicked => {root.settings-window()}
    }

    VerticalBox {
        alignment: center;
        padding-right: 20px;
        padding-left: 20px;

        Text {
            vertical-alignment: center;
            horizontal-alignment: center;
            font-size: 32px;
            text: "What is country?";
        }

        ImageRS {
            icon: icon;
        }

        GridBox {
            MyButton {row: 0; border-color: root.button-data[0].color;
                my_hight: root.height / 10; text: root.button-data[0].text; clicked => {root.button-clicked(0)} }
            MyButton { border-color: root.button-data[1].color;
                my_hight: root.height / 10; text: root.button-data[1].text; clicked => {root.button-clicked(1)} }

            MyButton {row: 1; border-color: root.button-data[2].color;
                my_hight: root.height / 10; text: root.button-data[2].text; clicked => {root.button-clicked(2)} }
            MyButton { border-color: root.button-data[3].color;
                my_hight: root.height / 10; text: root.button-data[3].text; clicked => {root.button-clicked(3)} }
        }
    }
}
