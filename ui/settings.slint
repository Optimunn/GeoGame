import { VerticalBox, CheckBox } from "std-widgets.slint";
import { StaticImage } from "images.slint";
export component SettingsMenu inherits Rectangle {
    callback settings-window;
    background: @linear-gradient(180deg,#fff1fc 0%, #e0cc3a 100%);

    StaticImage {
        icon: @image-url("../assets/icons/cross.svg");
        x_pos: 0px;
        y_pos: 0px;
        clicked => {root.settings-window()}
    }

    Text {
        y: 5px;
        horizontal-alignment: center;
        font-size: 24px;
        text: "Settings";
    }

    VerticalBox {
        padding-right: 20px;
        padding-left: 20px;
        padding-top: 50px;
        // Text {
        //     text: "Select preferred regions";
        // }
        CheckBox {
            text: "Europe";
        }
        CheckBox {
            text: "Asia";
        }
        CheckBox {
            text: "Africa";
        }
        CheckBox {
            text: "North America";
        }
        CheckBox {
            text: "South America";
        }
        CheckBox {
            text: "Oceania";
        }

    }
}