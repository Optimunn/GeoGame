import { VerticalBox } from "std-widgets.slint";
import { ImageResizable } from "images.slint";
import { MyButton } from "mybutton.slint";
export component WelcomeWindow inherits Rectangle {
    callback scene-visible(int);
    background: @linear-gradient(0deg, #5dca68 0%, #5792b6 100%);

    VerticalBox {
        alignment: center;
        padding-right: 20px;
        padding-left: 20px;

        function ret_height() -> length {
            return root.height / 10;
        }

        ImageResizable {
            icon: @image-url("../assets/icons/earth.svg");
        }
        MyButton { text: "Play";
            height: ret_height(); border-color: root.background.darker(50%);
            clicked => { root.scene-visible(2) }
        }
        MyButton { text: "Settings";
            height: ret_height(); border-color: root.background.darker(50%);
            clicked => { root.scene-visible(3) }
        }
        MyButton { text: "About";
            height: ret_height(); border-color: root.background.darker(50%); 
            clicked => { root.scene-visible(4) }
        }
    }
    
}